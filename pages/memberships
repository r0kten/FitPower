$plans = $stmt->fetchAll();
?>
<h2>Абонементи</h2>
<table>
    <tr><th>Назва</th><th>Тривалість (міс.)</th><th>Ціна</th></tr>
    <?php foreach ($plans as $plan): ?>
        <tr>
            <td><?= htmlspecialchars($plan['name']) ?></td>
            <td><?= $plan['duration_months'] ?></td>
            <td><?= $plan['price'] ?> грн</td>
        </tr>
    <?php endforeach; ?>
</table>
